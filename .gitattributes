# Auto detect text files and perform LF normalization
* text=auto

# Force batch scripts to use CRLF
*.{cmd,[cC][mM][dD]} text eol=crlf
*.{bat,[bB][aA][tT]} text eol=crlf

# Force bash scripts to use LF
*.sh text eol=lf
mvnw.cmd text eol=crlf
*.cmd text eol=crlf
mvnw text eol=lf

# Java sources
*.java text eol=lf
*.gradle text eol=lf
*.gradle.kts text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Frontend files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.properties text eol=lf

# Docker files
Dockerfile text eol=lf
docker-compose*.yml text eol=lf 